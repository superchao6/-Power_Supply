.container{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.choose_channel_box{
  width: 100%;
  background-color:#ddd;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.item{
  display: flex;
  font-size: 32rpx;
  color: rgb(255, 255, 255);
  height: 100rpx;
  width: 50%;
  line-height: 50rpx;
  align-self: center;
  align-items:center;
  text-align: center;
  justify-content:center;
}
.active{
  background-color: #3f99ff;
}

.switch_channel{
  display: flex;
  align-items:center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.switch_txt{
  font-size:x-large ;
  margin-right: 40px;
}

.show{
  width: 100%;
}
.shou_title{
  display: flex;
  align-items:center;
  justify-content:center;
  background-color: #5fc3fd;
  font-size: x-large;
  height: 100rpx;
}
.show_line1{
  display: flex;
  background-color: #97d1f8;
  align-self: center;
  align-items:center;
  text-align: center;
  font-size: larger;
  height: 40px;
}
.show_line2{
  display: flex;
  background-color: #5fc3fd;
  align-items:center;
  text-align: center;
  font-size: larger;
  height: 40px;
}
.show_name{
  display: flex;
  width: 50%;
  height: 40px;
  border-color: rgb(158, 156, 133);
  border-width: 4rpx;
  border-left: 0px;
  border-bottom: 0px;
  border-top: 0px;
  border-style: solid;
  font-size: larger;
  align-items:center;
  justify-content: center;
}
.show_num{
  display: flex;
  width: 50%;
  height: 40px;
  border-color:rgb(158, 156, 133);
  border-width: 4rpx;
  border-right: 0px;
  border-bottom: 0px;
  border-top: 0px;
  border-style: solid;
  font-size: larger;
  align-items:center;
  justify-content: center;
}
.tips{
  color: red;
  margin-left: 10%;
  margin-bottom: 10px;
}
.input_box{
  width: 100%;
  margin-top: 50rpx;
}
.detail{
  margin: auto;
}

.title{
  color: black;
  text-align: left;
  font-size:x-large;
  margin-left: 10%;
}

.input_num{
  margin-left: 10%;
  height: 100rpx;
  width: 80%;
  font-size: 50rpx;
  border: rgb(0, 0, 0);
  border-radius: 20rpx;
  border-style: outset;
  border-width: 4rpx;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}
.ok_button{
  margin-top: 60rpx;
  margin-bottom: 50rpx;
}
